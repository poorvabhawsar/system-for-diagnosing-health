   <script type="text/javascript">

$(document).ready(function() { relatedLinks();});

function relatedLinks() {
	var cu = webmd.url.clear();
	$("#middleContent_fmt .related_links ul").each(function() {
		var short = ($(this).children("li").length<5) ? true : false;
		var ul = this;
		$(ul).children("li").each(function() {
			var dl = true;
			$(this).children("a").each(function() {
				if(webmd.url.clear(this.href) == cu) { dl = false; }
			});
			if(!dl) {$(this).css("display","none");}
		});
		if($(this).children("li.with_image:visible").length == $(this).children("li.with_image").length) {
			$(this).children("li.with_image:last").css("display","none");
		}
		$(ul).children("li:not(.with_image):visible").each(function() {
			var c = true;
			$(this).children("a").each(function() {
				var a = this.href;
				$(ul).children("li.with_image:visible").each(function() {
					$(this).children("a").each(function() {
						if(a == this.href) { c = false; }
					});
				});
			});
			if(!c) {$(this).css("display","none");}
		});
		if($(this).children("li:not(.with_image):visible").length == $(this).children("li:not(.with_image)").length && !short) {
			$(this).children("li:last").css("display","none");
		}
	});
}
</script>
